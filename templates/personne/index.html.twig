{% extends 'template.html.twig' %}

{% block PageTitle %}Hello PersonneController!{% endblock %}

{% block body %}

    {% for name,value in app.session.flashBag.get('success')%}
        <div class="alert alert-danger">
            {{message}}
        </div>
    {% endfor %}

    {{dump(personnes)}}
    <table class="table">
    <tr>
        <th>
            Nom
        </th>
        <th>
           Prenom
        </th>
        <th>
           Age
        </th>
        <th>
