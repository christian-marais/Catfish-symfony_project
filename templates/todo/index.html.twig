{% extends 'template.html.twig' %}

{% block Title %}
    Todo liste
{% endblock %}


{% block PageTitle %}
    <h1> Liste des todos</h1>
{% endblock %}

{% block body %}
    <ol class="list-group">
        {% for name,content in app.session.get('todos')%}
            <li class="list-group-item">
                {{name}} : {{content}}
            </li>
        {% endfor %}
    </ol>
{% endblock %}
